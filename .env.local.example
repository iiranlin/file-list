# Database Configuration
# Option 1: Complete connection URL (recommended for cloud databases)
# Replace with your actual database connection string
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Option 2: Separate database configuration (alternative to DATABASE_URL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=file_list_db
# DB_USER=your_username
# DB_PASSWORD=your_password
# DB_SSL=true

# Database Connection Pool Settings (optional)
# DB_MAX_CONNECTIONS=1
# DB_IDLE_TIMEOUT=20
# DB_MAX_LIFETIME=1800

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Qiniu Cloud Storage Configuration
QINIU_ACCESS_KEY=your_qiniu_access_key
QINIU_SECRET_KEY=your_qiniu_secret_key
QINIU_BUCKET_NAME=your_bucket_name
QINIU_DOMAIN=your_bucket_domain
QINIU_CDN_DOMAIN=https://your-cdn-domain.com

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=oss
R2_PUBLIC_DOMAIN=https://your-custom-domain.com

# Upload Configuration
# UPLOAD_PROVIDER: 'r2' (default) or 'qiniu'
UPLOAD_PROVIDER=r2

# Example configurations for popular cloud providers:
# 
# Neon (https://neon.tech):
# DATABASE_URL="postgresql://username:password@ep-xxx-xxx.c-2.us-east-2.aws.neon.tech/database?sslmode=require"
#
# Supabase (https://supabase.com):
# DATABASE_URL="postgresql://postgres:password@db.xxx.supabase.co:5432/postgres"
#
# Railway (https://railway.app):
# DATABASE_URL="postgresql://postgres:password@containers-us-west-xxx.railway.app:5432/railway"
#
# Vercel Postgres:
# DATABASE_URL="postgresql://username:password@xxx-pooler.c-2.us-east-2.aws.neon.tech/verceldb?sslmode=require"
